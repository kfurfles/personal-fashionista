{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "esModuleInterop": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types",
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules", "dist"
    ]
}